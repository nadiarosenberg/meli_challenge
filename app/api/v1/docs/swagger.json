{
  "openapi": "3.0.0",
  "info": {
    "title": "MercadoLibre Challenge API",
    "description": "API para el challenge de la página de detalle de producto de MercadoLibre",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "API Base URL"
    }
  ],
  "paths": {
    "/products/{productId}": {
      "get": {
        "summary": "Obtener detalle de un producto",
        "description": "Obtiene toda la información de un producto específico según su ID",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID del producto a consultar"
          }
        ],
        "responses": {
          "200": {
            "description": "Información detallada del producto",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Product not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{productId}/images": {
      "get": {
        "summary": "Obtener imágenes de un producto",
        "description": "Obtiene todas las imágenes de un producto específico según su ID",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID del producto"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de imágenes del producto en base64",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "byte",
                    "description": "Imagen en formato base64"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Product not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{productId}/payment-methods": {
      "get": {
        "summary": "Obtener métodos de pago de un producto",
        "description": "Obtiene los métodos de pago disponibles para un producto específico",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID del producto"
          }
        ],
        "responses": {
          "200": {
            "description": "Métodos de pago disponibles",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductPaymentMethods"
                }
              }
            }
          },
          "404": {
            "description": "Métodos de pago no encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Payment methods not found for this product"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/stores/{storeId}": {
      "get": {
        "summary": "Obtener información de una tienda",
        "description": "Obtiene la información detallada de una tienda según su ID",
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID de la tienda"
          }
        ],
        "responses": {
          "200": {
            "description": "Información de la tienda",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Store"
                }
              }
            }
          },
          "404": {
            "description": "Tienda no encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Store not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "Obtener listado de productos",
        "description": "Obtiene un listado paginado de productos con filtros opcionales",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Número de página"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Número de productos por página"
          },
          {
            "name": "storeId",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "ID de la tienda para filtrar productos"
          },
          {
            "name": "secondaryCategoryId",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "ID de categoría secundaria para filtrar productos"
          },
          {
            "name": "excludeId",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "ID de producto a excluir de los resultados"
          }
        ],
        "responses": {
          "200": {
            "description": "Listado paginado de productos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductsResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID del producto (MongoDB ObjectId)"
          },
          "storeData": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "ID de la tienda"
              },
              "name": {
                "type": "string",
                "description": "Nombre de la tienda"
              }
            }
          },
          "categories": {
            "type": "object",
            "properties": {
              "mainId": {
                "type": "string",
                "description": "ID de la categoría principal"
              },
              "mainName": {
                "type": "string",
                "description": "Nombre de la categoría principal"
              },
              "secondaryId": {
                "type": "string",
                "description": "ID de la categoría secundaria"
              },
              "secondaryName": {
                "type": "string",
                "description": "Nombre de la categoría secundaria"
              },
              "secondaryPosition": {
                "type": "integer",
                "description": "Posición de la categoría secundaria"
              }
            }
          },
          "title": {
            "type": "string",
            "description": "Título del producto"
          },
          "soldAmount": {
            "type": "integer",
            "description": "Cantidad de unidades vendidas"
          },
          "isNew": {
            "type": "boolean",
            "description": "Indica si el producto es nuevo"
          },
          "isBestSelling": {
            "type": "boolean",
            "description": "Indica si el producto es más vendido"
          },
          "rating": {
            "type": "number",
            "format": "float",
            "description": "Calificación del producto (0-5)"
          },
          "ratingVotes": {
            "type": "integer",
            "description": "Cantidad de votos en la calificación"
          },
          "priceConfig": {
            "type": "object",
            "properties": {
              "currency": {
                "type": "string",
                "enum": ["USD", "ARS"],
                "description": "Moneda del precio"
              },
              "originalPrice": {
                "type": "number",
                "format": "float",
                "description": "Precio original"
              },
              "price": {
                "type": "number",
                "format": "float",
                "description": "Precio actual"
              },
              "discount": {
                "type": "number",
                "format": "float",
                "description": "Porcentaje de descuento"
              },
              "acceptInstallments": {
                "type": "boolean",
                "description": "Indica si acepta pago en cuotas"
              },
              "installmentsAmount": {
                "type": "integer",
                "description": "Cantidad de cuotas"
              },
              "installmentsPrice": {
                "type": "number",
                "format": "float",
                "description": "Precio por cuota"
              },
              "installmentsInterest": {
                "type": "boolean",
                "description": "Indica si las cuotas tienen interés"
              }
            }
          },
          "colors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "colorName": {
                  "type": "string",
                  "description": "Nombre del color"
                },
                "productImage": {
                  "type": "string",
                  "format": "byte",
                  "description": "Imagen del producto en ese color (base64)"
                }
              }
            }
          },
          "mainImage": {
            "type": "string",
            "format": "byte",
            "description": "Imagen principal del producto (base64)"
          },
          "stock": {
            "type": "object",
            "properties": {
              "original": {
                "type": "integer",
                "description": "Stock original"
              },
              "available": {
                "type": "integer",
                "description": "Stock disponible"
              }
            }
          },
          "mainDescription": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Puntos principales de la descripción"
          },
          "description": {
            "type": "string",
            "description": "Descripción completa del producto"
          },
          "technicalDescription": {
            "type": "object",
            "properties": {
              "screenSize": {
                "type": "string",
                "description": "Tamaño de pantalla"
              },
              "internalMemory": {
                "type": "string",
                "description": "Memoria interna"
              },
              "backCamera": {
                "type": "string",
                "description": "Cámara trasera"
              },
              "frontCamera": {
                "type": "string",
                "description": "Cámara frontal"
              },
              "hasNfc": {
                "type": "boolean",
                "description": "Indica si tiene NFC"
              },
              "unlockingMethod": {
                "type": "string",
                "description": "Método de desbloqueo"
              }
            }
          }
        }
      },
      "Store": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID de la tienda (MongoDB ObjectId)"
          },
          "name": {
            "type": "string",
            "description": "Nombre de la tienda"
          },
          "profileImage": {
            "type": "string",
            "format": "byte",
            "description": "Imagen de perfil de la tienda (base64)"
          },
          "bannerImage": {
            "type": "string",
            "format": "byte",
            "description": "Imagen de banner de la tienda (base64)"
          },
          "isOfficialStore": {
            "type": "boolean",
            "description": "Indica si es tienda oficial"
          },
          "productAmount": {
            "type": "integer",
            "description": "Cantidad de productos"
          },
          "sellsAmount": {
            "type": "integer",
            "description": "Cantidad de ventas"
          },
          "storeUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL de la tienda"
          }
        }
      },
      "PaymentMethod": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["creditCard", "debitCard", "cash", "wallet", "bankTransfer"],
            "description": "Tipo de método de pago"
          },
          "method": {
            "type": "string",
            "enum": ["visa", "mastercard", "amex", "oca", "rapipago", "pagofacil", "mercadopago", "uala"],
            "description": "Nombre del método de pago"
          },
          "installments": {
            "type": "integer",
            "description": "Cantidad de cuotas disponibles"
          },
          "installmentsInterest": {
            "type": "boolean",
            "description": "Indica si las cuotas tienen interés"
          }
        }
      },
      "ProductPaymentMethods": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "description": "ID del producto"
          },
          "methods": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PaymentMethod"
            }
          }
        }
      },
      "ProductPreview": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID del producto"
          },
          "title": {
            "type": "string",
            "description": "Título del producto"
          },
          "storeData": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "ID de la tienda"
              },
              "name": {
                "type": "string",
                "description": "Nombre de la tienda"
              }
            }
          },
          "mainImage": {
            "type": "string",
            "format": "byte",
            "description": "Imagen principal del producto (base64)"
          },
          "priceConfig": {
            "type": "object",
            "properties": {
              "price": {
                "type": "number",
                "format": "float",
                "description": "Precio del producto"
              },
              "currency": {
                "type": "string",
                "enum": ["USD", "ARS"],
                "description": "Moneda del precio"
              }
            }
          },
          "isBestSelling": {
            "type": "boolean",
            "description": "Indica si el producto es más vendido"
          },
          "isNew": {
            "type": "boolean",
            "description": "Indica si el producto es nuevo"
          }
        }
      },
      "ProductsResponse": {
        "type": "object",
        "properties": {
          "page": {
            "type": "integer",
            "description": "Número de página actual"
          },
          "limit": {
            "type": "integer",
            "description": "Número de productos por página"
          },
          "total": {
            "type": "integer",
            "description": "Total de productos"
          },
          "totalPages": {
            "type": "integer",
            "description": "Total de páginas"
          },
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductPreview"
            }
          }
        }
      }
    }
  }
}